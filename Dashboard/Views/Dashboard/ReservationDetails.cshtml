@model Dashboard.Models.ReservationDetailsViewModel

@{
    ViewData["Title"] = "ReservationDetails";
}

<h1>Reservation Details</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h2>Selected Date: @Model.SelectedDate.ToShortDateString()</h2>

<h3>Past Reservations</h3>
@if (Model.PastReservations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Date
                </th>
                <th>
                    Payment
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.PastReservations)
            {
                <tr>
                    <td>
                        @reservation.Id
                    </td>
                    <td>
                        @reservation.Date.ToShortDateString()
                    </td>
                    <td>
                        @reservation.Payment
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No past reservations found.</p>
}

@if (Model.PastReservations.Any())
{
    <p>Total amount for past reservations: @Model.TotalPastAmount</p>
}

<h3>Upcoming Reservations</h3>
@if (Model.UpcomingReservations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Date
                </th>
                <th>
                    Payment
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.UpcomingReservations)
            {
                <tr>
                    <td>
                        @reservation.Id
                    </td>
                    <td>
                        @reservation.Date.ToShortDateString()
                    </td>
                    <td>
                        @reservation.Payment
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming reservations found.</p>
}
